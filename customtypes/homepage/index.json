{
    "id": "homepage",
    "label": "HomePage",
    "format": "page",
    "repeatable": false,
    "status": true,
    "json": {
        "Main": {
            "title": { "type": "Text", "config": { "label": "Title", "placeholder": "" } },
            "uid": { "type": "UID", "config": { "label": "uid", "placeholder": "" } },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "main_pitch_slice": { "type": "SharedSlice" },
                        "features_slice": { "type": "SharedSlice" },
                        "client_types_slice": { "type": "SharedSlice" },
                        "client_reviews_slice": { "type": "SharedSlice" },
                        "cta_slice": { "type": "SharedSlice" }
                    }
                }
            }
        },
        "SEO & Metadata": {
            "meta_description": {
                "config": { "label": "Meta Description", "placeholder": "A brief summary of the page" },
                "type": "StructuredText"
            },
            "meta_image": {
                "config": { "constraint": { "height": 1260, "width": 2400 }, "label": "Meta Image", "thumbnails": [] },
                "type": "Image"
            },
            "meta_title": {
                "config": {
                    "label": "Meta Title",
                    "placeholder": "A title of the page used for social media and search engines"
                },
                "type": "Text"
            }
        }
    }
}
