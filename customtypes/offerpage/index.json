{
    "id": "offerpage",
    "label": "OfferPage",
    "format": "page",
    "repeatable": true,
    "status": true,
    "json": {
        "Main": {
            "uid": { "config": { "label": "UID" }, "type": "UID" },
            "title": { "type": "Text", "config": { "label": "title", "placeholder": "" } },
            "label": { "type": "Text", "config": { "label": "label", "placeholder": "" } },
            "ordinal": { "type": "Number", "config": { "label": "ordinal", "placeholder": "" } },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "cta_slice": { "type": "SharedSlice" },
                        "content_slice": { "type": "SharedSlice" },
                        "offer_items_list_slice": { "type": "SharedSlice" }
                    }
                }
            }
        },
        "SEO & Metadata": {
            "meta_description": {
                "config": { "label": "Meta Description", "placeholder": "A brief summary of the page" },
                "type": "StructuredText"
            },
            "meta_image": {
                "config": { "constraint": { "height": 1260, "width": 2400 }, "label": "Meta Image", "thumbnails": [] },
                "type": "Image"
            },
            "meta_title": {
                "config": {
                    "label": "Meta Title",
                    "placeholder": "A title of the page used for social media and search engines"
                },
                "type": "Text"
            }
        }
    }
}
